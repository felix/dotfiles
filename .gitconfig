[user]
    name = Felix Hanley
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /home/felix/.gitignore.global
[alias]
    st = status --short
    ci = commit
    br = branch
    co = checkout
    diff = diff --word-diff
    cp = cherry-pick
    cp = clone
    sl = stash list
    sp = stash pop
    ls = ls-files
    # log
    lg = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    # log diff
    lgd = log -u
    # log files
    lgf = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    # subtrees
    stl = !"git log | grep git-subtree-dir | awk '{ print $2 }'"
    sta = !"f() { git subtree add --squash --prefix=$2 $1 master; }; f"
    stu = "!f() { git subtree pull --squash --prefix=$2 $1 master; }; f"
[color]
    ui = true
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[branch]
    autosetupmerge = true
[github]
    user = felix
[gui]
    spellingdictionary = none
[mergetool "vimdiff3"]
    cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[merge]
    #tool = vimdiff3
    tool = meld
[push]
    default = simple
    followTags = true

