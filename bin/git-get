#!/bin/sh

[ $# -eq 0 ] && printf "Missing repository" && exit 1

GITGETBASE="${GITGETBASE:-$HOME/src}"

opts=clone

# read options to pass through to git
while [ "$(printf '%-.1s' "$1")" = "-" ]; do
	opts="$opts $1"
	shift
done

url=$1; shift
repo="$(echo "$url" |sed -E 's/^.+@//;s/\.git$//;s@^.+//@@;s@:@/@g')"
dir="$GITGETBASE/$repo"

# replace clone dir name
[ -n "$1" ] && dir="$(dirname "$dir")/$1"

mkdir -p "$(dirname "$dir")"
git $opts "$url" "$dir"
